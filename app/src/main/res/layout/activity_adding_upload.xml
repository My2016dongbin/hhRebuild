                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edit_bg_select"
                        android:gravity="center_vertical|start"
                        android:hint="请输入事件详情"
                        android:inputType="textMultiLine"
                        android:maxLength="300"
                        android:maxLines="100"
                        android:textColor="@color/c7"
                        android:textCursorDrawable="@drawable/edit_cursor_color_gray"
                        android:textSize="14sp" />
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/view_picture_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/picture_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="0 / 5"
                        android:textColor="@color/c5"
                        android:textSize="12sp" />
                </FrameLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/view_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp">

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/ll_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/white"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="32dp" />


                <TextView
                    android:id="@+id/text_commit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>