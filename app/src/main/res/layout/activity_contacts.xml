<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.haohai.platform.fireforestplatform.ui.viewmodel.ContactsViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NewsViewModel">
        <include
            android:id="@+id/top_bar"
            layout="@layout/view_top_bar"
            binding:onLeftClick ="@{viewModel.barLeftClick}"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_role"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_role"
                    android:textColor="@color/c7"
                    android:maxWidth="150dp"
                    android:minWidth="60dp"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="全部"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/image_status"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_down"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
            </LinearLayout>
            <!--检索栏-->
            <FrameLayout
                android:id="@+id/top_search"
                android:layout_margin="15dp"
                android:background="@drawable/white_conner"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp">
                <ImageView
                    android:src="@mipmap/ic_search_"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <EditText
                    android:id="@+id/edit_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:maxLength="18"
                    android:hint="搜索"
                    android:textColorHint="@color/black30"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:textColor="@color/black60"
                    android:textCursorDrawable="@drawable/edit_cursor_color" />
            </FrameLayout>

        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/news_smart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</layout>