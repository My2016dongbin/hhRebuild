<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/theme_primary"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/theme_primary"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_back"
                android:src="@drawable/video_back"
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_title"
                android:text="添加"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@color/c1"
        android:orientation="vertical">

        <View
            android:background="@color/c2"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            style="@style/UploadRow">
            <TextView
                android:id="@+id/tv_name"
                android:text="名称"
                style="@style/UploadText"/>
            <EditText
                android:id="@+id/et_name"
                android:hint="请输入名称"
                style="@style/UploadEdit"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_area"
            style="@style/UploadRow">
            <TextView
                android:text="所属区域"
                style="@style/UploadText"/>
            <TextView
                android:id="@+id/tv_area"
                android:text="选择区域"
                android:layout_marginRight="15dp"
                style="@style/UploadText2"/>
            <ImageView
                android:id="@+id/iv_area"
                android:src="@mipmap/ic_right_ro"
                android:layout_marginRight="20dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_start"
            style="@style/UploadRow">
            <TextView
                android:text="作业开始时间"
                style="@style/UploadText"/>
            <TextView
                android:id="@+id/tv_start"
                android:text="选择开始时间"
                android:layout_marginRight="15dp"
                style="@style/UploadText2"/>
            <ImageView
                android:src="@mipmap/ic_right_ro"
                android:layout_marginRight="20dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_end"
            style="@style/UploadRow">
            <TextView
                android:text="作业结束时间"
                style="@style/UploadText"/>
            <TextView
                android:id="@+id/tv_end"
                android:text="选择结束时间"
                android:layout_marginRight="15dp"
                style="@style/UploadText2"/>
            <ImageView
                android:src="@mipmap/ic_right_ro"
                android:layout_marginRight="20dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
        <LinearLayout
            style="@style/UploadRow">
            <TextView
                android:id="@+id/tv_person"
                android:text="责任人"
                style="@style/UploadText"/>
            <EditText
                android:id="@+id/et_person"
                android:hint="请输入责任人"
                style="@style/UploadEdit"/>
        </LinearLayout>
        <LinearLayout
            style="@style/UploadRow">
            <TextView
                android:id="@+id/tv_phone"
                android:text="联系方式"
                style="@style/UploadText"/>
            <EditText
                android:id="@+id/et_phone"
                android:hint="请输入联系方式"
                style="@style/UploadEdit"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_flame"
            style="@style/UploadRow">
            <TextView
                android:text="焚烧区域"
                style="@style/UploadText"/>
            <TextView
                android:id="@+id/tv_flame"
                android:text="点此选择区域"
                android:layout_marginRight="15dp"
                style="@style/UploadText2"/>
            <ImageView
                android:src="@mipmap/ic_right_ro"
                android:layout_marginRight="20dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
        <TextView
            android:text="描述"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/et_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:gravity="start"
            android:hint="请输入描述"
            android:ellipsize="end"
            android:maxLines="6"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white"
            android:inputType="textMultiLine"
            android:textColor="@color/c5"
            android:textCursorDrawable="@drawable/edit_cursor_color" />

        <TextView
            android:id="@+id/tv_commit"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="保存"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_buttons"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>
