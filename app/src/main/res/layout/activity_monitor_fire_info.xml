<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.haohai.platform.fireforestplatform.ui.viewmodel.MonitorFireMessageInfoViewModel" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.activity.MonitorFireMessageInfoActivity">
        <include
            android:id="@+id/top_bar"
            layout="@layout/view_top_bar"
            binding:onLeftClick ="@{viewModel.barLeftClick}"/>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <include
                        android:id="@+id/line_name"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_type"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_time"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_lng_lat"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_address"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_handle"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_handle_time"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_handle_user"
                        layout="@layout/view_info_line"/>
                    <include
                        android:id="@+id/line_handle_options"
                        layout="@layout/view_info_line"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="报警图片"
                        android:layout_marginStart="15dp"
                        android:gravity="center|start"
                        android:textColor="@color/c7"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/left_pic"
                            android:scaleType="centerCrop"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <ImageView
                            android:id="@+id/right_pic"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="15dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="报警视频"
                        android:layout_marginStart="15dp"
                        android:gravity="center|start"
                        android:textColor="@color/c7"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/left_video"
                            android:scaleType="centerCrop"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <ImageView
                            android:id="@+id/right_video"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="15dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</layout>