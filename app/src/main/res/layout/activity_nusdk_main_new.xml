<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/left_icon"
            android:src="@drawable/ic_back"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/left"
            android:text="返回"
            android:textStyle="bold"
            android:textColor="@color/text_color3"
            android:textSize="14sp"
            android:padding="5dp"
            android:layout_marginStart="32dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            android:textColor="@color/text_color3"
            android:textSize="16sp"
            android:text="融合通信"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/right"
                android:text=""
                android:textColor="@color/text_color6"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/right_icon"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_red_fire"
                android:visibility="gone"
                android:layout_marginEnd="6dp"
                android:layout_width="6dp"
                android:layout_height="6dp"/>
        </LinearLayout>
        <View
            android:background="@color/c2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/demo_gmeet_audio"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/icon_audio"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:text="会议"
            android:textStyle="bold"
            android:textColor="@color/text_color3"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color6"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_more"
                android:layout_width="14dp"
                android:layout_height="14dp"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/demo_gmeet_video"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/icon_audio"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:text="视频会议"
            android:textStyle="bold"
            android:textColor="@color/text_color3"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color6"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_more"
                android:layout_width="14dp"
                android:layout_height="14dp"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/demo_call"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/icon_audio"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:text="电话"
            android:textStyle="bold"
            android:textColor="@color/text_color3"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color6"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_more"
                android:layout_width="14dp"
                android:layout_height="14dp"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/demo_address"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/icon_order"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:text="通讯录"
            android:textStyle="bold"
            android:textColor="@color/text_color3"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_color6"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_more"
                android:layout_width="14dp"
                android:layout_height="14dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>