<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/left_icon"
                android:src="@drawable/ic_back"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/left"
                android:text="返回"
                android:onClick="@{onLeftClick}"
                android:textStyle="bold"
                android:textColor="@color/text_color3"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_marginStart="32dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:textColor="@color/text_color3"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/right"
                    android:text=""
                    android:textColor="@color/text_color6"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/right_icon"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_red_fire"
                    android:visibility="gone"
                    android:layout_marginEnd="6dp"
                    android:layout_width="6dp"
                    android:layout_height="6dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/right_image"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_red_fire"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <View
                android:background="@color/c2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"/>
        </FrameLayout>
        <!--内容-->
        <com.haohai.platform.fireforestplatform.old.linyi.QcScrollView2
            android:id="@+id/sv_out"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarSize="20dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:scrollbarTrackVertical="@color/c"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray1.5">

                <!--资源名称-->
                <LinearLayout
                    style="@style/resourceInfoLinearLayout">
                    <TextView
                        android:text="检查名称"
                        style="@style/resourceInfoLinearLayout_left" />
                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/resourceInfoLinearLayout_right" />
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:hint="请输入检查名称"
                        android:minLines="1"
                        android:scrollbars="vertical"
                        android:text=""
                        android:textColor="@color/c6"
                        android:textSize="16sp" />
                </LinearLayout>

                <!--所属网格-->
                <LinearLayout
                    style="@style/resourceInfoLinearLayout"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:text="所属网格"
                        style="@style/resourceInfoLinearLayout_left" />
                    <TextView
                        android:id="@+id/tv_grid"
                        android:text="请点击选择 >"
                        style="@style/resourceInfoLinearLayout_right" />
                </LinearLayout>
                <!--所属网格-->
                <LinearLayout
                    android:id="@+id/ll_tomap"
                    style="@style/resourceInfoLinearLayout"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:text="隐患位置"
                        style="@style/resourceInfoLinearLayout_left" />
                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/resourceInfoLinearLayout_right" />

                    <ImageView
                        android:id="@+id/to_map_view"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_tomap" />
                </LinearLayout>

                <!--任务截止时间-->
                <FrameLayout
                    android:id="@+id/fl_enddate"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/white"
                    android:layout_height="40dp">
                    <TextView
                        android:text="任务截止时间"
                        style="@style/resourceInfoLinearLayout_left"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_enddate"
                            android:layout_marginEnd="10dp"
                            android:text="点击选择时间"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@drawable/ic_open_down"
                            android:layout_marginEnd="15dp"
                            android:rotation="-90"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
                <!--备注-->
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="问题描述"
                        style="@style/resourceInfoLinearLayout_title"
                        android:layout_marginTop="20dp"/>
                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/transparent"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:textColorHint="@color/gray1"
                        android:hint="请输入问题描述"
                        android:minHeight="60dp"
                        android:gravity="start"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:inputType="textMultiLine" />
                </LinearLayout>
                <!--图片添加-->
                <HorizontalScrollView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_pictures"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>
                <View
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <!--整治人-->
                <FrameLayout
                    android:id="@+id/fl_worker"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/white"
                    android:layout_height="40dp">
                    <TextView
                        android:text="整治人"
                        style="@style/resourceInfoLinearLayout_left"/>
                    <LinearLayout
                        android:id="@+id/ll_worker_small"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_worker"
                            android:layout_marginEnd="10dp"
                            android:text="点击选择"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@drawable/ic_open_down"
                            android:layout_marginEnd="15dp"
                            android:rotation="-90"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>

                <!--检查人签名-->
                <FrameLayout
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="检查人签名"
                        style="@style/resourceInfoLinearLayout_title"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/tv_rowscreen"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_gravity="right"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="20dp"/>
                </FrameLayout>
                <FrameLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_margin="15dp"
                        android:background="@drawable/gray_border"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:descendantFocusability="blocksDescendants"
                            android:layout_width="match_parent"
                            android:background="#ffffff"
                            android:layout_height="match_parent">
                            <com.haohai.platform.fireforestplatform.old.linyi.LinePathView
                                android:id="@+id/path_view"
                                android:background="#ffffff"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>

                <!--重写 && 确定-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="6dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_left"
                        android:text="重写"
                        android:textSize="16sp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/blackdark"
                        android:background="@drawable/btn_theme_border"
                        android:layout_width="120dp"
                        android:layout_height="35dp"/>
                    <Button
                        android:id="@+id/btn_right"
                        android:text="确定"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_theme"
                        android:layout_width="120dp"
                        android:layout_height="35dp"/>
                </LinearLayout>


            </LinearLayout>
        </com.haohai.platform.fireforestplatform.old.linyi.QcScrollView2>
        <!--提交-->
        <Button
            android:id="@+id/btn_submit"
            android:text="提交"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_theme"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


    </FrameLayout>

</LinearLayout>