<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_coner_6"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="请填写异常考勤原因"
            android:textColor="@color/c6"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_cause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg_select"
            android:inputType="text"
            android:textColor="@color/c4"
            android:textCursorDrawable="@drawable/edit_cursor_color" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_bottom_c_coner"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/theme_primary_alpha"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_bottom_blue_coner"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>