<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="重置"
            android:textColor="@color/c6"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="设置时间"
            android:textColor="@color/c7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/confirm"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:padding="5dp"
            android:text="确定"
            android:textColor="@color/theme_color_blue"
            android:textSize="12sp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="180dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.haohai.platform.fireforestplatform.ui.cell.WheelView
            android:id="@+id/wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:isLoop="false"
            app:itemVisibleNum="5"
            app:lineColor="@color/theme_primary"
            app:lineSpaceingDimens="10dp"
            app:textColorCenter="@color/theme_primary"
            app:textColorOuter="@android:color/darker_gray"
            app:textSizeCenter="16dp"
            app:textSizeOuter="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text=" ： "
            android:textColor="@color/c6"
            android:textSize="12sp" />

        <com.haohai.platform.fireforestplatform.ui.cell.WheelView
            android:id="@+id/wheel_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:isLoop="false"
            app:itemVisibleNum="5"
            app:lineColor="@color/theme_primary"
            app:lineSpaceingDimens="10dp"
            app:textColorCenter="@color/theme_primary"
            app:textColorOuter="@android:color/darker_gray"
            app:textSizeCenter="16dp"
            app:textSizeOuter="16dp" />


    </LinearLayout>

</LinearLayout>
