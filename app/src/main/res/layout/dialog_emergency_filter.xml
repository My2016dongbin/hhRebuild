<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="EmergencyFilterBinding">

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_background">
        <FrameLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="筛选条件"
                android:layout_marginStart="10dp"
                android:gravity="center|start"
                android:textColor="@color/c7"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="重置"
                android:layout_marginStart="75dp"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:gravity="center|start"
                android:textColor="@color/c6"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/close"
                android:layout_gravity="end|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_cha"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c1_5"/>

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件标题"
                android:textSize="14sp"
                android:textColor="@color/c6"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <EditText
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/back_color_f8"
                android:gravity="center_vertical|end"
                android:inputType="text"
                android:maxLength="16"
                android:maxLines="1"
                android:textColor="@color/c7"
                android:textCursorDrawable="@drawable/edit_cursor_color_gray"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c1_2"/>
        <LinearLayout
            android:id="@+id/ll_area"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事发地区"
                android:textSize="14sp"
                android:textColor="@color/c6"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <TextView
                android:id="@+id/area"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="14sp"
                android:textColor="@color/c7"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c1_2"/>
        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事发时间"
                android:textSize="14sp"
                android:textColor="@color/c6"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="14sp"
                android:textColor="@color/c7"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c1_2"/>
        <LinearLayout
            android:id="@+id/ll_level"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件等级"
                android:textSize="14sp"
                android:textColor="@color/c6"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <TextView
                android:id="@+id/level"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="14sp"
                android:textColor="@color/c7"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c1_2"/>
        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件类型"
                android:textSize="14sp"
                android:textColor="@color/c6"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <TextView
                android:id="@+id/type"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="14sp"
                android:textColor="@color/c7"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dismiss"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/theme_color_blue"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_solid"/>
            <TextView
                android:id="@+id/confirm"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_little"/>
        </LinearLayout>

    </LinearLayout>
</layout>
