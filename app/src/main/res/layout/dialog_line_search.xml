<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/white_border_conner"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="查询巡护轨迹"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/cha"
            android:src="@drawable/ic_cha"
            android:padding="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_back"
        android:visibility="gone"
        android:paddingTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_left_bk"
            android:layout_width="14dp"
            android:layout_gravity="center_vertical"
            android:layout_height="14dp"/>
        <TextView
            android:textColor="@color/c6"
            android:textSize="12sp"
            android:text="后退"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_page1"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_date"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/c6"
                android:textSize="16sp"
                android:text="开始日期"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="请选择"
                android:layout_marginEnd="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_right"
                android:padding="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <View
            android:background="@color/c2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/fl_start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/c6"
                android:textSize="16sp"
                android:text="开始时间"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_start"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="请选择"
                android:layout_marginEnd="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_right"
                android:padding="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <View
            android:background="@color/c2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/fl_date_end"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/c6"
                android:textSize="16sp"
                android:text="结束日期"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_date_end"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="请选择"
                android:layout_marginEnd="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_right"
                android:padding="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <View
            android:background="@color/c2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/fl_end"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/c6"
                android:textSize="16sp"
                android:text="结束时间"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_end"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="请选择"
                android:layout_marginEnd="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_right"
                android:padding="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <View
            android:background="@color/c2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/fl_user"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/c6"
                android:textSize="16sp"
                android:text="查询用户"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_user"
                android:textColor="@color/c7"
                android:textSize="15sp"
                android:text="默认"
                android:layout_marginEnd="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_right"
                android:padding="12dp"
                android:visibility="invisible"
                android:layout_gravity="right|center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <View
            android:background="@color/c2"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="查询"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/theme_border_conner"
            android:layout_width="160dp"
            android:layout_height="40dp"/>
    </LinearLayout>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/ll_page2"
       android:visibility="gone"
       android:overScrollMode="never"
       android:paddingTop="10dp"
       android:paddingStart="20dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
</LinearLayout>