<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>

    <variable
        name="adapter"
        type="com.haohai.platform.fireforestplatform.ui.multitype.ChooseImageViewBinder" />

    <variable
        name="item"
        type="com.haohai.platform.fireforestplatform.ui.multitype.ChooseImage" />
</data>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/evaluate_item_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/evaluate_item_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_delete" />

</FrameLayout>
</layout>
