<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="com.haohai.platform.fireforestplatform.ui.multitype.GridTreesViewBinder" />
        <variable
            name="item"
            type="com.haohai.platform.fireforestplatform.ui.multitype.GridTrees" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@color/back_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/text_color3"/>
            <ImageView
                android:id="@+id/state"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_model"
            android:layout_marginStart="15dp"
            android:background="@drawable/bottom_sheet_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv"
            android:layout_marginStart="15dp"
            android:background="@drawable/bottom_sheet_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <View
            android:id="@+id/bottom"
            android:visibility="gone"
            android:background="@color/back_color_f8"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

    </LinearLayout>
</layout>
