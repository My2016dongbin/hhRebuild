<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="adapter"
            type="com.haohai.platform.fireforestplatform.ui.multitype.HandleViewBinder" />

        <variable
            name="item"
            type="com.haohai.platform.fireforestplatform.ui.multitype.Handle" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/c">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>


        <LinearLayout
            android:id="@+id/click"
            android:onClick="@{()->adapter.onItemClick(item)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center"
            android:background="@drawable/white_coner_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_marginEnd="12dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-3dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="8dp"
                        android:text="山东省青岛市市北区台东街道北区台东街道"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:textColor="@color/text_color3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-01-30 08:00:00"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_color6"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/address"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-3dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="山东省青岛市市北区台东街道台东东街道台东东街道台东东街道台东"
                        android:textColor="@color/text_color6"
                        android:textSize="13sp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="top|end"
                    android:layout_width="60dp"
                    android:layout_height="25dp">

                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/warn_state1" />
                    <TextView
                        android:id="@+id/text_status"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真实"
                        android:textColor="@color/status_start"
                        android:textSize="12sp" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</layout>
