<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="com.haohai.platform.fireforestplatform.ui.multitype.UploadViewBinder" />
        <variable
            name="item"
            type="com.haohai.platform.fireforestplatform.ui.multitype.Upload" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/c">

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:scrollbars="none"
            android:background="@drawable/white_coner_6"
            android:layout_marginStart="20mm"
            android:layout_marginEnd="20mm"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--条目内容-->
                <LinearLayout
                    android:id="@+id/click"
                    android:layout_width="1085mm"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="@{()->adapter.onItemClick(item)}"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_margin="15dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp">
                            <ImageView
                                android:id="@+id/type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/warn_1"
                                android:scaleType="fitXY" />
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/text_type1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="气象"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/text_type2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="灾害"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/text_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="60dp"
                                android:layout_marginTop="15dp"
                                android:text="山东省青岛市市北区台东街道台东路142号142号142号"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textStyle="bold"
                                android:textColor="@color/text_color3"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_time"
                                android:layout_gravity="bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2024-01-30 08:00:00"
                                android:layout_marginBottom="15dp"
                                android:textColor="@color/text_color6"
                                android:textSize="12sp" />
                            <FrameLayout
                                android:layout_gravity="top|end"
                                android:layout_width="60dp"
                                android:layout_height="25dp">

                                <ImageView
                                    android:id="@+id/status"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/warn_state1" />
                                <TextView
                                    android:id="@+id/text_status"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="未开始"
                                    android:textColor="@color/status_start"
                                    android:textSize="12sp" />
                            </FrameLayout>
                            <ImageView
                                android:layout_gravity="bottom|end"
                                android:src="@drawable/worker_more"
                                android:layout_margin="15dp"
                                android:layout_width="14dp"
                                android:layout_height="13dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/address"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="山东省青岛市市北区台东街道台东路142号"
                        android:textColor="@color/text_color6"
                        android:textSize="13sp" />

                </LinearLayout>
                <!--侧滑菜单-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/edit"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:gravity="center"
                        android:background="@color/back_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="续报"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <View
                        android:background="@color/c3"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/delete"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:gravity="center"
                        android:background="@drawable/red_coner_6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="删除"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </FrameLayout>

</layout>
