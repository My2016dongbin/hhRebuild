<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="adapter"
            type="com.haohai.platform.fireforestplatform.ui.multitype.WorkerListViewBinder" />

        <variable
            name="item"
            type="com.haohai.platform.fireforestplatform.ui.multitype.WorkerDetail" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/back_color">

        <LinearLayout
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!--<LinearLayout
                android:id="@+id/click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:onClick="@{()->adapter.onItemClick(item)}"
                android:orientation="vertical">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="市北区"
                    android:textColor="@color/text_color3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/worker_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="15dp"
                    android:paddingBottom="15dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_conner"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="值班领导"
                                android:textColor="@color/c6"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="值班人员"
                                android:textColor="@color/c6"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/day_leader_name"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="张晓华"
                                android:textColor="@color/c7"/>
                            <TextView
                                android:id="@+id/day_worker_name"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="周毅"
                                android:textColor="@color/c7"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/worker_day"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="15dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_conner"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="值班领导"
                                android:textColor="@color/c6"/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="值班人员"
                                android:textColor="@color/c6"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/night_leader_name"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="张晓华"
                                android:textColor="@color/c7"/>
                            <TextView
                                android:id="@+id/night_worker_name"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="周毅"
                                android:textColor="@color/c7"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/worker_night"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:background="@color/back_color_line" />

    </LinearLayout>
</layout>
